<% if blog.errors.any? %>
    <ul>
        <% blog.errors.full_messages.each do |error|%>
            <li> <%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for blog do |f| %>
 <div class = "form-div">
  <%= f.label :title %><br>
  <%= f.text_field :title, value: blog.title %>
 </div>
 <div class = "form-div">
  <%= f.label :description %><br>
  <%= f.text_field :description, value: blog.description %>
 </div>
 <div>
  <%= f.label :picture %> 
  <%= f.file_field :picture, accept:'image/png,image/gif,image/jpeg,image/jpg' %>
 </div>
 <div class = "form-div">
  <%= f.submit %>
 </div>
<% end %>