<% if blog.errors.any? %>
    <ul>
        <% blog.errors.full_messages.each do |error|%>
            <li> <%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for blog do |f| %>
 <p>
  <%= f.label :title %><br>
  <%= f.text_field :title, value: blog.title %>
 </p>
 <p>
  <%= f.label :description %><br>
  <%= f.text_area :description, value: blog.description %>
 </p>
 <p>
  <%= f.submit %>
 </p>
<% end %>