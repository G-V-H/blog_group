<%= form_with model: blog, local: true do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title, value: blog.title %>
    </div>
    <div>
        <%= form.label :description %>
        <%= form.text_area :description, value: blog.description %>
    </div>
    <div>
        <%= form.label :comment %>
        <%= form.text_area :comment, value: blog.comment %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>